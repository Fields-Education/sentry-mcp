/**
 * Fields fork of Sentry MCP Cloudflare worker
 * Deploys to: sentry-mcp-fields.workers.dev
 * Points to self-hosted Sentry at: s.fields.app
 *
 * Required secrets (set via `wrangler secret put <NAME>`):
 *   - SENTRY_CLIENT_ID      : OAuth app client ID from s.fields.app
 *   - SENTRY_CLIENT_SECRET  : OAuth app client secret
 *   - COOKIE_SECRET         : Session encryption (32+ chars)
 *   - OPENAI_API_KEY        : For AI features
 *   - SENTRY_DSN            : DSN from s.fields.app for error reporting
 *   - SENTRY_HOST           : s.fields.app
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "sentry-mcp-fields",
  "main": "./src/server/index.ts",
  "compatibility_date": "2025-03-21",
  "compatibility_flags": [
    "nodejs_compat",
    "nodejs_compat_populate_process_env",
    "global_fetch_strictly_public"
  ],
  "keep_vars": true,
  "assets": {
    "directory": "./public",
    "binding": "ASSETS",
    "not_found_handling": "single-page-application"
  },
  "version_metadata": {
    "binding": "CF_VERSION_METADATA"
  },
  "vars": {},
  "unsafe": {
    "bindings": [
      {
        "name": "CHAT_RATE_LIMITER",
        "type": "ratelimit",
        "namespace_id": "3001",
        "simple": {
          "limit": 10,
          "period": 60
        }
      },
      {
        "name": "SEARCH_RATE_LIMITER",
        "type": "ratelimit",
        "namespace_id": "3002",
        "simple": {
          "limit": 20,
          "period": 60
        }
      },
      {
        "name": "MCP_RATE_LIMITER",
        "type": "ratelimit",
        "namespace_id": "3003",
        "simple": {
          "limit": 60,
          "period": 60
        }
      }
    ]
  },
  "kv_namespaces": [
    {
      "binding": "OAUTH_KV",
      "id": "457468efd8d04a168cbf90bb1cc60e01"
    }
  ],
  "ai": {
    "binding": "AI"
  },
  "migrations": [
    {
      "tag": "v1"
    },
    {
      "tag": "v2"
    }
  ],
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1
  },
  "tail_consumers": [],
  "dev": {
    "port": 8790
  }
}
